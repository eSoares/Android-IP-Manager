<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="outsideOverlay"
    tools:context="pt.it.esoares.ipmanager.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/gip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="get"
            android:text="@string/get_ip" />

        <Button
            android:id="@+id/gdns"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="get"
            android:text="@string/get_dns" />

        <Button
            android:id="@+id/ggw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="get"
            android:text="@string/get_gateway" />

        <Button
            android:id="@+id/gmask"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="get"
            android:text="@string/get_mask" />

        <Button
            android:id="@+id/sip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="set"
            android:text="@string/set_ip" />

        <Button
            android:id="@+id/sdns"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="set"
            android:text="@string/set_dns" />

        <Button
            android:id="@+id/sgw"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="set"
            android:text="@string/set_gateway" />

        <Button
            android:id="@+id/smask"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="set"
            android:text="@string/set_mask" />
    </LinearLayout>

</ScrollView>